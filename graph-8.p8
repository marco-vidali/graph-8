-- graph

max_crd = 3
x = -max_crd

axes_color = 7
pts_color = 12

function graph_init()
	-- x axis
	line(0, 63, 127, 63, axes_color)
	
	-- y axis
	line (63, 0, 63, 127, axes_color)
end

function graph_update()
	-- increment x
	x += max_crd / 64
end

function graph_draw()
	-- scale coordinates
	scaled_x = x / (max_crd / 64)
	scaled_y = f(x) / (max_crd / 64)
	
	-- draw point
	pset(scaled_x + 63, -scaled_y + 63, pts_color)
end
-->8
-- function

function f(x)
	return x ^ 2
end
